<?php

namespace App\Repositories;

use App\Repositories\Interfaces\TransactionRepositoryInterface;
use App\Models\Transaction;

class TransactionRepository implements TransactionRepositoryInterface 
{
    public function doesEntryExist($column, $value, ?string $filter, string $operator = '='): bool
    {
        return $filter ?
            Transaction::where($column, $operator, $value)->where('transaction_type', $operator, $filter)->exists() :
            Transaction::where($column, $operator, $value)->exists();
    }

    public function getTransactionById($transactionId): bool
    {
        return Transaction::findOrFail($transactionId);
    }

    public function createTransaction(array $data): bool
    {
        return Transaction::create($data);
    }
    
}
